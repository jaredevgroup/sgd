@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es-pe">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cambiar contraseña | SGD</title>
    <link rel="stylesheet" href="@Url.Content("~/Assets/dist/css/alt/adminlte.fonts.source-sans-pro.css")">
    <link rel="stylesheet" href="@Url.Content("~/Assets/plugins/fontawesome-free/css/all.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Assets/plugins/icheck-bootstrap/icheck-bootstrap.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Assets/dist/css/adminlte.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Assets/dist/css/adminlte-custom.css")">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="card card-outline card-primary">
            <div class="card-body">
                <div class="text-center">
                    <img class="profile-user-img profile-user-img-lg border-0" src="@Url.Content("~/Assets/dist/img/SGDLogo.png")" />
                </div>
                <p class="login-box-msg">Estás a un paso de tu nueva contraseña, recupera tu contraseña ahora.</p>
                <form id="frm-cambiar-contraseña" action="@Url.Action("actualizar-contraseña", "login")" method="post" autocomplete="off">
                    <input type="hidden" name="usuarioId" value="@HttpUtility.UrlDecode(Request.Url.Segments[Request.Url.Segments.Length - 1])" />
                    <div class="form-group">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                            <input type="password" name="contraseña" id="txt-contraseña" class="form-control" placeholder="Contraseña">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                            <input type="password" name="contraseña-confirmar" id="txt-contraseña-confirmar" class="form-control" placeholder="Confirmar contraseña">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Cambiar contraseña</button>
                        </div>
                    </div>
                </form>
                <p class="mt-3 mb-1">
                    <a href="@Url.Action("index", "login")">Ingresar</a>
                </p>
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/Assets/plugins/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/Assets/plugins/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Assets/plugins/jquery-validation/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Assets/plugins/jquery-validation/additional-methods.min.js")"></script>
    <script src="@Url.Content("~/Assets/dist/js/adminlte.min.js")"></script>
    <script src="@Url.Content("~/Assets/dist/js/pages/cambiar-contraseña.js")"></script>
    <script>
        $(function () {
            cambiarContraseñaPage.init();
        });
    </script>
</body>
</html>
